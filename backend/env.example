# =====================================================
# CONFIGURACIÓN DEL BACKEND - TURISMO INCLUSIVO
# =====================================================

# Configuración del servidor
NODE_ENV=development
PORT=3001
HOST=localhost

# Base de datos PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=turismo_inclusivo
DB_USER=turismo_app
DB_PASSWORD=password_seguro
DB_SSL=false

# JWT (JSON Web Tokens)
JWT_SECRET=tu_jwt_secret_super_seguro_aqui
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=tu_refresh_secret_super_seguro_aqui
JWT_REFRESH_EXPIRES_IN=30d

# CORS
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Subida de archivos
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# Servicios externos
MAPBOX_ACCESS_TOKEN=tu_mapbox_token_aqui
LIGHTHOUSE_API_KEY=tu_lighthouse_api_key_aqui

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Email (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_email@gmail.com
SMTP_PASS=tu_password_de_aplicacion

# Redis (opcional, para cache)
REDIS_URL=redis://localhost:6379

# Monitoreo
SENTRY_DSN=tu_sentry_dsn_aqui 