{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Portal Turismo: Ejecutar con Docker",
			"type": "shell",
			"command": "docker-compose",
			"args": [
				"up",
				"--build"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new",
				"showReuseMessage": true,
				"clear": false
			},
			"options": {
				"cwd": "${workspaceFolder}"
			}
		}
	]
}